<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:id="@+id/linearlayout_widget_container"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textview_widget_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>

        <TextView
            android:ellipsize="end"
            android:id="@+id/textview_widget_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ImageView
        android:contentDescription="@string/weather_icon_content_description"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/imageview_widget_weather_forecast"
        android:layout_margin="8dp"
        android:src="@drawable/art_clear"/>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textview_widget_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textview_widget_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>